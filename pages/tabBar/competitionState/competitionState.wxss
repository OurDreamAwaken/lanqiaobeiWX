page {
  font-family: PingFangSC-Regular;
  height: 100%;
  background: rgba(247, 248, 252, 1);
}

.tital-font {
  font-size: 42rpx;
  font-weight: 400;
  color: rgba(53, 53, 53, 1);
  line-height: 50rpx;
}

.last-view-line {
  background: rgba(178, 178, 178, 1);
  box-shadow: 0px 4px 6px 0px rgba(0, 0, 0, 0.1);
  margin: 20rpx;
  height: 100rpx;
}

.now-view-line {
  background: rgba(196, 70, 154, 0.5);
  box-shadow: 0px 4px 6px 0px rgba(0, 0, 0, 0.1);
  margin: 10rpx;
  height: 100rpx;
}

.name-font {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(53, 53, 53, 1);
  line-height: 50rpx;
}

.date-font {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(53, 53, 53, 1);
  line-height: 50rpx;
}

.person-font {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(53, 53, 53, 1);
  line-height: 50rpx;
}

.join-button {
  width: 144rpx;
  height: 48rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 48rpx;
  border-radius: 24rpx;
  background: linear-gradient(90deg, rgba(255, 119, 88, 1) 0%, rgba(255, 69, 126, 1) 100%);
  box-shadow: 0px 4rpx 6rpx 0px rgba(255, 69, 126, 0.2);
}
